{
  "manifest_version": 3,
  "name": "SmarterTabSwitching",
  "version": "0.1",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to show an alert",
    "default_popup": "popup.html"
  },
  "commands": {
    "switch-tab": {
      "suggested_key": {
        "default": "Ctrl+Q"
      },
      "description": "Move to the first tab",
      "global": true
    }
  }
}
